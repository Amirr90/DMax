                <ImageView
                    android:id="@+id/imageView31"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView29"
                    app:layout_constraintTop_toBottomOf="@+id/textView62"
                    app:srcCompat="@drawable/eellipse" />

                <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView31"
                    app:layout_constraintTop_toBottomOf="@+id/textView64"
                    app:srcCompat="@drawable/eellipse" />

                <ImageView
                    android:id="@+id/imageView35"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="29dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView33"
                    app:layout_constraintTop_toBottomOf="@+id/textView67"
                    app:srcCompat="@drawable/eellipse" />

                <ImageView
                    android:id="@+id/imageView38"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView35"
                    app:layout_constraintTop_toBottomOf="@+id/textView69"
                    app:srcCompat="@drawable/eellipse" />

                <ImageView
                    android:id="@+id/imageView40"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView38"
                    app:layout_constraintTop_toBottomOf="@+id/textView71"
                    app:srcCompat="@drawable/eellipse" />

                <ImageView
                    android:id="@+id/imageView32"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="8dp"
                    android:foregroundGravity="center"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView31"
                    app:layout_constraintEnd_toEndOf="@+id/imageView31"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/imageView31"
                    app:layout_constraintTop_toTopOf="@+id/imageView31"
                    app:layout_constraintVertical_bias="0.47"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:id="@+id/imageView34"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView33"
                    app:layout_constraintEnd_toEndOf="@+id/imageView33"
                    app:layout_constraintStart_toStartOf="@+id/imageView33"
                    app:layout_constraintTop_toTopOf="@+id/imageView33"
                    app:srcCompat="@drawable/blood" />

                <ImageView
                    android:id="@+id/imageView36"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView33"
                    app:layout_constraintEnd_toEndOf="@+id/imageView33"
                    app:layout_constraintStart_toStartOf="@+id/imageView33"
                    app:layout_constraintTop_toTopOf="@+id/imageView33"
                    app:srcCompat="@drawable/blood" />

                <ImageView
                    android:id="@+id/imageView37"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView35"
                    app:layout_constraintEnd_toEndOf="@+id/imageView35"
                    app:layout_constraintStart_toStartOf="@+id/imageView35"
                    app:layout_constraintTop_toTopOf="@+id/imageView35"
                    app:srcCompat="@drawable/group" />

                <ImageView
                    android:id="@+id/imageView39"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView38"
                    app:layout_constraintEnd_toEndOf="@+id/imageView38"
                    app:layout_constraintStart_toStartOf="@+id/imageView38"
                    app:layout_constraintTop_toTopOf="@+id/imageView38"
                    app:srcCompat="@drawable/lungs" />

                <ImageView
                    android:id="@+id/imageView41"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView40"
                    app:layout_constraintEnd_toEndOf="@+id/imageView40"
                    app:layout_constraintStart_toStartOf="@+id/imageView40"
                    app:layout_constraintTop_toTopOf="@+id/imageView40"
                    app:srcCompat="@drawable/thermometer" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>